{
    "@applicator": "org.pinf.lib/0/json-patch",
    "@args": {
        "pgs": {},
        "roles": {},
        "databases": {},
    },
    "patches": [
        [
            "$.config['ScriptedCloud.PINF.Tools/boot/0'].$depends",
            [
                "pio-sync-services"
            ]
        ],
        [
            "$.config",
            {
                "github.com/pinf-io/io.pinf.pio.sync/0": {
                    "$to": {
                        "pio-sync-services": {
                            "services": {
                                "io.pinf.db.postgresql": {
                                    "depends": [
                                        "io.pinf.pio.postsync"
                                    ],
                                    "location": "{{__DIRNAME__}}/node_modules/io.pinf.db.postgresql",
                                    "config": {
                                        "io.pinf.db.postgresql/0": {
                                            "port": 8089,
                                            "bind": "{{$from.server-services.vm.ip}}",
                                            "roles": "{{$.@args.roles}}",
                                            "databases": "{{$.@args.databases}}"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "github.com/sourcemint/smi-for-git/0": {
                    "submodules": {
                        "{{$.@args.pgs.workspaceRoot}}/.deps/github.com~pinf-io~io.pinf.db.postgresql~0/source/installed/master": {
                            "location": "git@github.com:pinf-io/io.pinf.db.postgresql.git"
                        }
                    }
                }
            }
        ],
        [
            "$.mappings",
            {
                "io.pinf.db.postgresql": {
                    "location": "{{$.@args.pgs.workspaceRoot}}/.deps/github.com~pinf-io~io.pinf.db.postgresql~0/source/installed/master",
                    "install": false
                }
            }
        ]
    ]
}